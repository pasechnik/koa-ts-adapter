{
    "name": "koa-ts-adapter",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "author": "Volodymyr Pasichnyk <vladimir.pasechnik@gmail.com>",
    "license": "MIT",
    "scripts": {
        "build": "tsc --build",
        "dev": "better-npm-run dev",
        "prestart": "npm run build",
        "start": "better-npm-run start",
        "test": "better-npm-run test",
        "test:watch": "better-npm-run test:watch",
        "lint": "eslint -f stylish --config .eslintrc.js 'src/**/*.ts'",
        "lint:fix": "eslint -f stylish --config .eslintrc.js 'src/**/*.ts' --fix",
        "prettier:fix": "prettier --config .prettierrc  --write  \"**/*.ts\" \"**/*.html\"  \"**/*.json\"",
        "prettier:fix:ts": "prettier --config .prettierrc  --write  \"**/*.ts\"",
        "prettier:fix:html": "prettier --config .prettierrc  --write  \"**/*.html\" --parser angular",
        "format:fix": "pretty-quick --staged",
        "watch-server": "nodemon --watch 'src/**/*' -e ts,tsx --exec ts-node src/app.ts"
    },
    "betterScripts": {
        "start": {
            "command": "node index.js",
            "env": {
                "DEBUG": "app:*"
            }
        },
        "dev": {
            "command": "ts-node-dev src/index.ts",
            "env": {
                "DEBUG": "app:*"
            }
        },
        "test": {
            "command": "jest",
            "env": {
                "DEBUG": "app:*",
                "NODE_ENV": "test"
            }
        },
        "test:watch": {
            "command": "jest --watchAll",
            "env": {
                "DEBUG": "app:*",
                "PORT": 7788,
                "NODE_ENV": "test"
            }
        }
    },
    "dependencies": {
        "better-npm-run": "^0.1.1",
        "class-validator": "^0.11.0",
        "debug": "^4.1.1",
        "koa": "^2.11.0",
        "koa-bodyparser": "^4.2.1",
        "koa-json": "^2.0.2",
        "koa-logger": "^3.2.1",
        "koa-router": "^8.0.7",
        "koa2-cors": "^2.0.6",
        "nodemon": "^2.0.2",
        "redis": "^3.0.2",
        "ts-node": "^8.6.2",
        "typescript": "^3.7.5"
    },
    "devDependencies": {
        "@types/debug": "^4.1.5",
        "@types/jest": "^25.1.2",
        "@types/koa": "^2.11.0",
        "@types/koa-bodyparser": "^4.3.0",
        "@types/koa-json": "^2.0.18",
        "@types/koa-logger": "^3.1.1",
        "@types/koa-router": "^7.4.0",
        "@types/koa2-cors": "^2.0.1",
        "@types/node": "^13.7.0",
        "@types/redis": "^2.8.15",
        "@types/supertest": "^2.0.8",
        "@typescript-eslint/eslint-plugin": "^2.19.2",
        "@typescript-eslint/parser": "^2.19.2",
        "eslint": "^6.8.0",
        "eslint-config-prettier": "^6.10.0",
        "eslint-config-standard": "^14.1.0",
        "eslint-plugin-import": "^2.20.1",
        "eslint-plugin-node": "^11.0.0",
        "eslint-plugin-prefer-arrow": "^1.1.7",
        "eslint-plugin-prettier": "^3.1.2",
        "eslint-plugin-promise": "^4.2.1",
        "eslint-plugin-standard": "^4.0.1",
        "husky": "^4.2.1",
        "jest": "^25.1.0",
        "npm-run-all": "^4.1.5",
        "prettier": "^1.19.1",
        "pretty-quick": "^2.0.1",
        "supertest": "^4.0.2",
        "ts-jest": "^25.2.0",
        "ts-node-dev": "^1.0.0-pre.44"
    },
    "jest": {
        "verbose": true,
        "collectCoverage": true,
        "modulePathIgnorePatterns": [
            "<rootDir>/node_modules/"
        ],
        "roots": [
            "<rootDir>/src"
        ],
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "testEnvironment": "node",
        "testPathIgnorePatterns": [
            "/node_modules/"
        ],
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json",
            "node"
        ],
        "globals": {
            "ts-jest": {
                "diagnostics": {
                    "ignoreCodes": [
                        2540
                    ]
                }
            }
        }
    },
    "husky": {
        "hooks": {
            "pre-commit": "run-s format:fix lint"
        }
    }
}
