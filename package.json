{
  "name": "koa-ts-adapter",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "author": "Volodymyr Pasichnyk <vladimir.pasechnik@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "tsc --build",
    "dev": "ts-node-dev src/index.ts",
    "start": "node index.js",
    "test": "NODE_ENV=test PORT=7788 jest",
    "test:watch": "npm run test -- --watchAll",
    "lint": "tslint --config tslint.json 'src/**/*.ts'",
    "lint:fix": "tslint --config tslint.json 'src/**/*.ts' --fix",
    "prettier:fix": "prettier --config .prettierrc  --write  \"**/*.ts\" \"**/*.html\"",
    "prettier:fix:ts": "prettier --config .prettierrc  --write  \"**/*.ts\"",
    "prettier:fix:html": "prettier --config .prettierrc  --write  \"**/*.html\" --parser angular",
    "format:fix": "pretty-quick --staged"
  },
  "dependencies": {
    "koa": "^2.11.0",
    "koa-bodyparser": "^4.2.1",
    "koa-json": "^2.0.2",
    "koa-logger": "^3.2.1",
    "koa-router": "^8.0.7",
    "koa2-cors": "^2.0.6",
    "ts-node": "^8.6.2",
    "typescript": "^3.7.5"
  },
  "devDependencies": {
    "@types/jest": "^25.1.2",
    "@types/koa": "^2.11.0",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-json": "^2.0.18",
    "@types/koa-logger": "^3.1.1",
    "@types/koa-router": "^7.4.0",
    "@types/koa2-cors": "^2.0.1",
    "@types/node": "^13.7.0",
    "@types/supertest": "^2.0.8",
    "husky": "^4.2.1",
    "jest": "^25.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.1",
    "supertest": "^4.0.2",
    "ts-jest": "^25.2.0",
    "ts-node-dev": "^1.0.0-pre.44",
    "tslint": "^6.0.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript-tslint-plugin": "^0.5.5"
  },
  "jest": {
    "verbose": true,
    "collectCoverage": true,
    "modulePathIgnorePatterns": [
      "<rootDir>/node_modules/"
    ],
    "roots": [
      "<rootDir>/__tests__"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "run-s format:fix lint"
    }
  }
}
